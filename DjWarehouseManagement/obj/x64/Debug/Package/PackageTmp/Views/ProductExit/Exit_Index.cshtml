                //var BatchId = row.Id;
                //var destination = row.destination;
                //window.location.href = "/ProductExit/Exit_Index?BatchId=" + BatchId + "&destination=" + destination;
            });

            table.on('click-row.bs.table', function (e, row, $element, field) {
                //表格单击事件
                //row：单击的行对应的记录。
                //$element：tr 元素。
                //field：与单击的单元格对应的字段名称。
                //if (field ==='menu_td') {
                //return; // 如果点击的是按钮，则不执行行点击逻辑
                //}
                //var Exit_Batch_Id = row.Id;
                //window.location.href = "/ProductExit/Index_Info"; // 跳转到详情页
            });

            $('#AddExitData_Btn').on('click', function () {
                // 获取选择的时间
                var dateInput = $('#ViewBag_dateInput').text();
                var BatchId = $('#ViewBag_BatchId').text();
                var destination = $('#ViewBag_destination').text();

                window.location.href = "/ProductExit/Exit_Index_Add?BatchId="
                    + BatchId + "&destination=" + destination + "&dateInput=" + dateInput;
            });
            $('#UpdateExitData_Btn').on('click', function () {
                /*                var getSelections = table.bootstrapTable('getSelections');
                                if (getSelections == null) {
                                    return;
                                }
                                var dateInput = $('#dateInput').val().trim();
                                var BatchId = getSelections[0].Id;
