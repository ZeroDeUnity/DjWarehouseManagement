<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Scripts/newWeb/assets/img/favicon.ico")">
    <link rel="icon" type="image/png" href="@Url.Content("~/Scripts/newWeb/assets/img/favicon.ico")">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>产品Index</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,300i,400,600,800" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


    <!-- Main CSS -->
    <link href="@Url.Content("~/Scripts/newWeb/assets/css/main.css")" rel="stylesheet" />

    <!-- Animation CSS -->
    <link href="@Url.Content("~/Scripts/newWeb/assets/css/vendor/aos.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/bootstrap-table-master/dist/bootstrap-table.css")" rel="stylesheet" />

    <!-- App favicon -->
    <link href="@Url.Content("~/Scripts/newWeb2/assets/images/favicon.ico")" rel="stylesheet" />

    <!-- Daterangepicker css -->
    <link href="@Url.Content("~/Scripts/newWeb2/assets/vendor/daterangepicker/daterangepicker.css")" rel="stylesheet" />

    <!-- Vector Map css -->
    <link href="@Url.Content("~/Scripts/newWeb2/assets/vendor/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.css")" rel="stylesheet" />

    <!-- Theme Config Js -->
    <script src="@Url.Content("~/Scripts/newWeb2/assets/js/config.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Scripts/newWeb2/assets/css/app.css?v=1.1.1")" rel="stylesheet" type="text/css" id="app-style" />

    <!-- Icons css -->
    <link href="@Url.Content("~/Scripts/newWeb2/assets/css/icons.css")" rel="stylesheet" type="text/css" />

    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>

<body>

    <main id="main01" @*class="container"*@>




        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-2 bg-light-subtle">
                            <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="ri-home-4-line"></i> 主页</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="/ProductExit/Index">产品出库</a></li>
                        </ol>
                    </nav>
                    <div id="toolbar">
                        <div class="form-inline" role="form">
                            <div class="form-group mr-3">
                                <!-- 输入框 -->
                                <input class="form-control" id="dateInput" type="date" name="date">
                            </div>
                            <div class="form-group">
                                <!-- 按钮组 -->
                                <button id="AddBatchData_Btn" type="button" @*type="submit"*@ class="btn btn-success mr-2">新增</button>
                                <button id="UpdateBatchData_Btn" type="button" class="btn btn-success mr-2">编辑</button>
                                <button id="ViewBatchData_Btn" type="button" @*type="submit"*@ class="btn btn-success mr-2">查看</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <section class="@*pt-4*@ pb-5 aos-init aos-animate" data-aos="fade-up">
                        @*<h3 class="h5 mb-4 font-weight-bold">Table</h3>*@
                        <div class="table-responsive">

                            <table id="table01"
                                   class="table-bordered table-centered mb-0"
                                   data-show-print="true"
                                   data-toggle="table"
                                   data-show-toggle="true"
                                   data-locale="zh-CN"
                                   data-height="800"
                                   data-fixed-scroll="true"
                                   @*data-ajax="ajaxRequest"*@
                                   @*data-pagination="true"*@
                                   @*data-side-pagination="server"*@
                                   @*data-response-handler="responseHandler"*@
                                   @*data-toolbar="#toolbar"*@
                                   @*data-buttons-align="left"*@
                                   data-search="true"
                                   data-show-columns="true"
                                   data-click-to-select="true"
                                   data-maintain-meta-data="true">
                                <thead class="bg-cyan">
                                    <tr>
                                        <th data-field="state" data-checkbox="true"></th>
                                        @*<th data-field="menu_td" data-width="500" data-formatter="priceFormatter">功能</th>*@
                                        <th data-field="Id" data-visible="false">ID</th>
                                        <th data-field="orderId" data-sortable="true">单号</th>
                                        <th data-field="destination" data-sortable="true">出库目标</th>
                                        <th data-field="totalQuantity" data-sortable="true">数量</th>
                                        <th data-field="batchCode">出库时间</th>
                                    </tr>
                                </thead>
                            </table>
                        </div> <!-- end table-responsive-->
                    </section>

                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div>





    </main>

    <label id="ViewBag_dateInput" style="display: none;">@ViewBag.dateInput</label>

    <!--------------------------------------
    JAVASCRIPTS
    --------------------------------------->

    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/popper.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb2/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/share.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/functions.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-table-master/dist/bootstrap-table.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-table-master/dist/extensions/print/bootstrap-table-print.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-table-master/dist/bootstrap-table-locale-all.js")" type="text/javascript"></script>

    <!-- Animation -->
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/aos.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb2/assets/js/app.js")" type="text/javascript"></script>

    <noscript>
        <style>
            *[data-aos] {
                display: block !important;
                opacity: 1 !important;
                visibility: visible !important;
            }
        </style>
    </noscript>
    <script>
        AOS.init({
            duration: 700
        });
    </script>

    <!-- Disable animation on less than 1200px, change value if you like -->
    <script>
        AOS.init({
            disable: function () {
                var maxWidth = 200;
                return window.innerWidth < maxWidth;
            }
        });
    </script>

    <script>
        //设置页面加载完成后事件,更新主页面高度
        const table01 = $('#table01');
        table01.on('load-success.bs.table', function (data) {
            // 表格加载完成后，强制更新滚动容器
            //$('.table-responsive').scrollLeft(0); // 可选：将滚动位置初始化
            // 重设列宽和表格视图
            table01.bootstrapTable('resetView');
            //const height = document.documentElement.scrollHeight;
            const mainDiv = document.getElementById('main01');
            const height = mainDiv.offsetHeight + 50;
            //alert(height);
            window.parent.postMessage({ type: 'height', value: height }, '*');
            //console.log("表格的 HTML 已完全渲染！");
        })
        table01.on('page-change.bs.table', function (data) {
            // 表格加载完成后，强制更新滚动容器
            //$('.table-responsive').scrollLeft(0); // 可选：将滚动位置初始化
            // 重设列宽和表格视图
            table01.bootstrapTable('resetView');
            //const height = document.documentElement.scrollHeight;
            const mainDiv = document.getElementById('main01');
            const height = mainDiv.offsetHeight + 50;
            //alert(height);
            window.parent.postMessage({ type: 'height', value: height }, '*');
            //console.log("表格的 HTML 已完全渲染！");
        })
    </script>


    <script>

        $(document).ready(function () {

            var today_Input = $("#ViewBag_dateInput").text();
            
            // 初始化时设置日期为当前日期
            var today = new Date().toISOString().split('T')[0];  // 获取当前日期的 yyyy-mm-dd 格式
            //在 JavaScript 里，null、空字符串""、undefined、NaN 以及 false 这些值在作为条件判断时都被视为假值
            if (today_Input != null && today_Input != "") {
                $('#dateInput').val(today_Input);
            } else {
                $('#dateInput').val(today);  // 设置为当前日期
            }

            //初始化数据
            initData();

            var table = $('#table01');
            table.on('dbl-click-cell.bs.table', function (e, field, value, row, $element) {
                //表格双击事件
                //field：单元格对应的字段名称。
                //value：单元格对应的数据值。
                //row：行对应的记录。
                //$element：td 元素。
                var dateInput = $('#dateInput').val().trim();
                var BatchId = row.Id;
                var destination = row.destination;
                window.location.href = "/ProductExit/Exit_Index?BatchId="
                    + BatchId + "&destination=" + destination + "&dateInput=" + dateInput;
            });

            table.on('click-row.bs.table', function (e, row, $element, field) {
                //表格单击事件
                //row：单击的行对应的记录。
                //$element：tr 元素。
                //field：与单击的单元格对应的字段名称。
                //if (field ==='menu_td') {
                //return; // 如果点击的是按钮，则不执行行点击逻辑
                //}
                //var Entry_Batch_Id = row.Id;
                //window.location.href = "/ProductEntry/Index_Info"; // 跳转到详情页
            });

            $('#AddBatchData_Btn').on('click', function () {
                // 获取选择的时间
                var dateInput = $('#dateInput').val().trim();

                window.location.href = "/ProductExit/Index_Add?dateInput=" + dateInput;
            });

            $('#UpdateBatchData_Btn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }
                var dateInput = $('#dateInput').val().trim();
                var BatchId = getSelections[0].Id;
                var destination = getSelections[0].destination;
                var orderId = getSelections[0].orderId;
                window.location.href = "/ProductExit/Index_Update?BatchId="
                    + BatchId + "&destination=" + destination + "&orderId=" + orderId + "&dateInput=" + dateInput;
            });

            $('#ViewBatchData_Btn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }
                var dateInput = $('#dateInput').val().trim();
                var BatchId = getSelections[0].Id;
                var destination = getSelections[0].destination;
                window.location.href = "/ProductExit/Exit_Index?BatchId="
                    + BatchId + "&destination=" + destination + "&dateInput=" + dateInput;
            });

            // 使用事件委托绑定编辑按钮点击事件
            /*            $(document).on('click', '.btn.btn-success.mr-2', function (e) {
                            if ($(this).text() === '编辑') {
                                var $tr = $(this).closest('tr');
                                var cells = $tr.find('td');

                                var cell1Value = cells.eq(2).text();
                                var cell2Value = cells.eq(3).text();
                                alert('你点击了编辑按钮，当前行第一列的值是:' + cell1Value + ', 第二列的值是:' + cell2Value);
                            } else if ($(this).text() === '查看') {
                                var $tr = $(this).closest('tr');
                                var cells = $tr.find('td');

                                var cell1Value = cells.eq(0).text();
                                var cell2Value = cells.eq(1).text();
                                alert('你点击了查看按钮，当前行第一列的值是:' + cell1Value + ', 第二列的值是:' + cell2Value);
                            }
                        });*/

            // 日期选择后，加载相应的批次数据
            $('#dateInput').change(function () {
                initData();
            });

            //初始化
            function initData() {
                var my_table = $('#table01');
                my_table.bootstrapTable('refreshOptions', {
                    /*ignoreClickToSelectOn: ignoreClickToSelectOn*/
                    // 其他配置
                    ajax: ajaxRequest
                });
            }

        });

        /*        function priceFormatter(value) {
                    var btnStr = '<button type="button" style="white-space: nowrap;" class="btn btn-success mr-2">编辑</button>'
                    btnStr += '<button type="button" style="white-space: nowrap;" class="btn btn-success mr-2">查看</button>';
                    return btnStr;
                }*/

        //ajax加载数据表
        function ajaxRequest(params) {
            
            // 获取选择的时间
            var dateInput = $('#dateInput').val().trim();

            var url = '/ProductExit/QueryStockExitBatchData';
            $.ajax({
                url: url,
                type: 'POST',
                data: {
                    exitTime: dateInput
                },
                success: function (res) {

                    // 确保数据为JSON对象
                    const data = JSON.parse(res);

                    var rows_Data = JSON.parse(data.Rows);

                    params.success(rows_Data);
                },
                error: function (xhr, status, error) {
                    // 可以在这里添加错误处理逻辑，当前只是保持基本框架
                    console.log("请求出错，状态: " + status + ", 错误: " + error);
                }
            });
        }


    </script>



</body>
</html>