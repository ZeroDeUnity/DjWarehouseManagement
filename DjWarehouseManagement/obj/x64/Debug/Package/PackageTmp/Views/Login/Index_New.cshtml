<body class="authentication-bg position-relative">
    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-8 col-lg-10">
                    <div class="card overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-6 d-none d-lg-block p-2">
                                <img src="@Url.Content("~/Scripts/newWeb2/assets/images/auth-img.jpg")" alt="" class="img-fluid rounded h-100">
                            </div>
                            <div class="col-lg-6">
                                <div class="d-flex flex-column h-100">
                                    <div class="auth-brand p-4">
                                        <a href="javascript:void(0);" class="logo-light">
                                            <img src="@Url.Content("~/Scripts/newWeb2/assets/images/logo.png")" alt="logo" height="22">
                                        </a>
                                        <a href="javascript:void(0);" class="logo-dark">
                                            <img src="@Url.Content("~/Scripts/newWeb2/assets/images/logo-sm.png")" alt="dark logo" height="22">
                                        </a>
                                    </div>
                                    <div class="p-4 my-auto">
                                        <h4 class="fs-20">Sign In</h4>
                                        <p class="text-muted mb-3">
                                            输入您的用户名和密码用以登录.
                                        </p>

                                        <!-- form -->
                                        <form action="#">
                                            <div class="mb-3">
                                                <label for="username" class="form-label">用户名</label>
                                                <input class="form-control" type="text" id="username" required=""
                                                       placeholder="请输入用户名">
                                            </div>
                                            <div class="mb-3">
                                                <a href="javascript:void(0);" class="text-muted float-end">
                                                    <small>
                                                        忘记
                                                        密码?
                                                    </small>
                                                </a>
                                                <label for="password" class="form-label">Password</label>
                                                <input class="form-control" type="password" required="" id="password"
                                                       placeholder="输入您的密码">
                                            </div>
                                            <div class="mb-3">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input"
                                                           id="checkbox-signin">
                                                    <label class="form-check-label" for="checkbox-signin">
                                                        记住
                                                        我
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="mb-0 text-start">
                                                <button class="btn btn-soft-primary w-100" type="button" id="loginBtn">
                                                    <i class="ri-login-circle-fill me-1"></i> <span class="fw-bold">
                                                        登录
                                                    </span>
                                                </button>
                                            </div>

                                        </form>
                                        <!-- end form-->
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div>
                    </div>
                </div>
                <!-- end row -->
            </div>
