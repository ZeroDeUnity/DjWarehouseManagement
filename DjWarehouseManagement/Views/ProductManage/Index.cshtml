<body>

    <main id="main01" @*class="container"*@>




        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-2 bg-light-subtle">
                            <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="ri-home-4-line"></i> 主页</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="/ProductManage/Index">产品维护</a></li>
                            @*<li class="breadcrumb-item active" aria-current="page">库存查询</li>*@
                        </ol>
                    </nav>
                    <div id="toolbar">
                        <div class="form-inline" role="form">
                            <div class="form-group mr-3">
                                <!-- 输入框 -->
                                <input type="text" id="selectInput" class="form-control input-round " placeholder="搜索内容">
                            </div>
                            <div class="form-group">
                                <!-- 按钮组 -->
                                <button id="searchBtn" type="button" @*type="submit"*@ class="btn btn-success mr-2">搜索</button>
                                <button id="resetBtn" type="button" class="btn btn-success mr-2">重置</button>
                                <button id="AddData" type="button" class="btn btn-success mr-2">新建产品</button>
                                <button id="CiteAddData" type="button" class="btn btn-success mr-2">引用新建</button>
                                <button id="SetTypeBtn" type="button" class="btn btn-success mr-2">配置产品类型</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <section class="@*pt-4*@ pb-5 aos-init aos-animate" data-aos="fade-up">
                        @*<h3 class="h5 mb-4 font-weight-bold">Table</h3>*@
                        <div class="table-responsive">


                            <table id="table01"
                                   class="table-bordered table-centered mb-0"
                                   data-show-print="true"
                                   data-toggle="table"
                                   data-show-toggle="true"
                                   data-locale="zh-CN"
                                   @*data-height="800"*@
                                   data-fixed-scroll="true"
                                   data-ajax="ajaxRequest"
                                   @*data-pagination="true"*@
                                   @*data-side-pagination="server"*@
                                   @*data-response-handler="responseHandler"*@
                                   @*data-toolbar="#toolbar"*@
                                   @*data-buttons-align="left"*@
                                   data-click-to-select="true"
                                   data-search="true"
                                   data-show-columns="true"
                                   data-maintain-meta-data="true">
                                <thead class="bg-cyan">
                                    <tr>
                                        <th data-field="state" data-checkbox="true"></th>
                                        <th data-field="Id" data-visible="false">ID</th>
                                        <th data-field="productType">级别</th>
                                        <th data-field="color" data-sortable="true">颜色</th>
                                        <th data-field="colorCode" data-sortable="true">色号</th>
                                        <th data-field="process" data-sortable="true">工艺</th>
                                        <th data-field="specification" data-sortable="true">规格</th>
                                        <th data-field="productTypeId" data-visible="false">产品类型ID</th>
                                        <th data-field="typeName" data-sortable="true">产品类型</th>
                                        <th data-field="size">码数</th>


                                    </tr>
                                </thead>
                            </table>
                        </div> <!-- end table-responsive-->
                    </section>

                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div>





    </main>

    <!--------------------------------------
    JAVASCRIPTS
    --------------------------------------->

    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/jquery.min.js")" type="text/javascript"></script>
