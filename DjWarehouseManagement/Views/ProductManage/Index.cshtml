        AOS.init({
            disable: function () {
                var maxWidth = 200;
                return window.innerWidth < maxWidth;
            }
        });
    </script>

    <script>
        //静态弹出框,固定主页面背景,禁止滚动
        const myModal = document.getElementById('scrollable-modal');
        myModal.addEventListener('shown.bs.modal', function () {
            window.parent.postMessage({ type: 'modal', value: false }, '*');
        });
        myModal.addEventListener('hidden.bs.modal', function () {
            window.parent.postMessage({ type: 'modal', value: true }, '*');
        });
    </script>

    <script>
        //设置页面加载完成后事件,更新主页面高度
        const table01 = $('#table01');
        table01.on('load-success.bs.table', function (data) {
            // 表格加载完成后，强制更新滚动容器
            //$('.table-responsive').scrollLeft(0); // 可选：将滚动位置初始化
            // 重设列宽和表格视图
            table01.bootstrapTable('resetView');
            //const height = document.documentElement.scrollHeight;
            const mainDiv = document.getElementById('main01');
            const height = mainDiv.offsetHeight + 50;
            //alert(height);
            window.parent.postMessage({ type: 'height', value: height }, '*');
            //console.log("表格的 HTML 已完全渲染！");
        })
        table01.on('page-change.bs.table', function (data) {
            // 表格加载完成后，强制更新滚动容器
            //$('.table-responsive').scrollLeft(0); // 可选：将滚动位置初始化
            // 重设列宽和表格视图
            table01.bootstrapTable('resetView');
            //const height = document.documentElement.scrollHeight;
            const mainDiv = document.getElementById('main01');
            const height = mainDiv.offsetHeight + 50;
            //alert(height);
            window.parent.postMessage({ type: 'height', value: height }, '*');
            //console.log("表格的 HTML 已完全渲染！");
        })
    </script>


    <script>

        var lastSearch_Val = "";

        $(document).ready(function () {

            // 点击搜索按钮的事件
            $('#searchBtn').click(function () {
                initData();
            });

            var table = $('#table01');
            table.on('dbl-click-cell.bs.table', function (e, field, value, row, $element) {
                //表格双击事件
                //field：单元格对应的字段名称。
                //value：单元格对应的数据值。
                //row：行对应的记录。
                //$element：td 元素。
                var dateInput = $('#dateInput').val().trim();
                var BatchId = row.Id;
                var source = row.source;
                window.location.href = "/ProductEntry/Entry_Index?BatchId="
                    + BatchId + "&source=" + source + "&dateInput=" + dateInput;
            });

            table.on('click-row.bs.table', function (e, row, $element, field) {
                //表格单击事件
                //row：单击的行对应的记录。
                //$element：tr 元素。
                //field：与单击的单元格对应的字段名称。
                //if (field ==='menu_td') {
                //return; // 如果点击的是按钮，则不执行行点击逻辑
                //}
                //var Entry_Batch_Id = row.Id;
                //window.location.href = "/ProductEntry/Index_Info"; // 跳转到详情页
            });

            $('#AddData').on('click', function () {

                window.location.href = "/ProductManage/Index_Add";
            });

            $('#CiteAddData').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }
                var Id = getSelections[0].Id;
                var productType = getSelections[0].productType;
                var color = getSelections[0].color;
                var colorCode = getSelections[0].colorCode;
                var process = getSelections[0].process;
                var specification = getSelections[0].specification;
                var size = getSelections[0].size;
                window.location.href = "/ProductManage/Index_Add?Id="
                    + Id + "&productType=" + productType + "&color=" + color + "&colorCode=" + colorCode
                    + "&process=" + process + "&specification=" + specification + "&size=" + size;

            });

            //配置产品类型
            $('#SetTypeBtn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }
                var Id = getSelections[0].Id;
                var productTypeId = getSelections[0].productTypeId;
                var typeName = getSelections[0].typeName;
                var color = getSelections[0].color;
                var colorCode = getSelections[0].colorCode;
                var process = getSelections[0].process;
                var specification = getSelections[0].specification;
                window.location.href = "/ProductManage/Index_SetType?Id=" + Id
                    + "&productTypeId=" + productTypeId + "&typeName=" + typeName + "&color=" + color
                    + "&colorCode=" + colorCode + "&process=" + process
                    + "&specification=" + specification;
            });


        });

        //初始化
        function initData() {
            $('#table01').bootstrapTable('refresh'); // 刷新表格
        }

        // 重置按钮的事件
        $('#resetBtn').click(function () {
            $('#selectInput').val('');

            //重新搜索
            $('#searchBtn').click();
        });


        //ajax加载数据表
        function ajaxRequest(params) {
            // 获取输入的颜色和色号
            var selectInput = $('#selectInput').val().trim();

            // 发送Ajax请求到后端
            $.ajax({
                url: '/ProductManage/QueryProductData', // 后端控制器的路径
                type: 'POST',
                data: {
                    selectInput: selectInput
                },
                success: function (response) {
                    // 确保数据为JSON对象
                    const data = JSON.parse(response);

                    var rows_Data = JSON.parse(data.Rows);

                    params.success(rows_Data);
                },
                error: function () {
                    $('#resultArea').append('<p class="no-results">查询出错，请稍后再试。</p>');
                }
            });
        }


    </script>



</body>
