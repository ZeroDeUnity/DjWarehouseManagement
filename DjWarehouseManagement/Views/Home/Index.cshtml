<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>杭州东骏库存管理</title>
    <!-- 引入BootSharp和Bootstrap的CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* 固定头部和按钮区域 */
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .fixed-header {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #f8f9fa;
            z-index: 1000;
            padding: 10px 0;
        }

        .buttons-section {
            position: fixed;
            top: 60px;
            width: 100%;
            background-color: #f8f9fa;
            z-index: 1000;
            padding: 10px 0;
        }

        .content-section {
            margin-top: 80px;
            overflow-y: auto;
            height: calc(100% - 140px);
            padding: 10px;
        }
    </style>
</head>
<body>
    <!-- 第一部分：标题 -->
    <div class="fixed-header text-center">
        <h2>杭州东骏库存管理</h2>
    </div>

    <!-- 第二部分：按钮 -->
    <div class="buttons-section text-center">
        <button class="btn btn-primary mx-2" id="queryBtn">查询</button>
        <button class="btn btn-primary mx-2" id="outBtn">出库</button>
        <button class="btn btn-primary mx-2" id="inBtn">入库</button>
        <button class="btn btn-primary mx-2" id="productBtn">产品</button>
    </div>

    <!-- 第三部分：内容展示区 -->
    <div class="content-section" id="contentArea">
        <!-- 动态加载的内容将会显示在这里 -->
    </div>

    <!-- 引入jQuery和Bootstrap的JS -->
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // 定义加载内容的方法
            function loadPage(pageUrl) {
                $('#contentArea').load(pageUrl, function (response, status, xhr) {
                    if (status == "error") {
                        $('#contentArea').html("<p>无法加载页面，请稍后再试。</p>");
                    }
                });
            }

            // 点击按钮加载不同的页面内容
            $('#queryBtn').click(function () {
                $('#contentArea').empty();
                loadPage('/Home/query');
            });

            $('#outBtn').click(function () {
                $('#contentArea').empty();
                loadPage('/Home/exit_Index');
            });

            $('#inBtn').click(function () {
                $('#contentArea').empty();
                loadPage('/Home/entry_Index');
            });

            $('#productBtn').click(function () {
                $('#contentArea').empty();
                loadPage('/Home/product_Index');
            });
        });
    </script>
</body>
</html>
