    <!-- Icons css -->
    <link href="@Url.Content("~/Scripts/newWeb2/assets/css/icons.css")" rel="stylesheet" type="text/css" />

    <!-- 引入 Select2 CSS -->
    <link href="@Url.Content("~/Content/select2.css")" rel="stylesheet" type="text/css" />

    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>

<body>

    <main id="main01" @*class="container"*@>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-2 bg-light-subtle">
                            <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="ri-home-4-line"></i> 主页</a></li>
                            <li class="breadcrumb-item"><a href="/ProductPriceManage/Index">价格维护</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="javascript:void(0);">新增价格</a></li>
                        </ol>
                    </nav>
                </div>
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <div class="mb-2">
                            <label for="selectType" class="form-label">产品类型:</label>
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- 下拉框,动态输入搜索结果出现选项 -->
                                    <select class="form-select" id="selectType" style="width: 100%;" required>
                                    </select>
                                    <div class="valid-feedback">
                                        验证通过~
                                    </div>
                                    <div class="invalid-feedback">
                                        该字段不能为空!
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-2">
                            <label for="salePrice" class="form-label">销售价格:</label>
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- 在下面是输入框,输入数字 -->
                                    <input type="number" step="0.00001" class="form-control" id="salePrice" placeholder="请输入销售价格" required>
                                    <div class="valid-feedback">
                                        验证通过~
                                    </div>
                                    <div class="invalid-feedback">
                                        该字段不能为空!
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-2">
                            <label for="offerPrice" class="form-label">报价价格:</label>
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- 在下面是输入框,输入数字 -->
                                    <input type="number" step="0.00001" class="form-control" id="offerPrice" placeholder="请输入报价价格" required>
                                    <div class="valid-feedback">
                                        验证通过~
                                    </div>
                                    <div class="invalid-feedback">
                                        该字段不能为空!
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-2 mt-5">
                            <button id="Submit_Btn" type="button" class="btn btn-primary mr-3">提交</button>
                            <button id="Back_Btn" type="button" class="btn btn-primary">返回</button>
                        </div>

                    </form>

                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div>

    </main>

    <label id="ViewBag_Id" style="display: none;">@ViewBag.Id</label>
    <label id="ViewBag_productTypeId" style="display: none;">@ViewBag.productTypeId</label>
    <label id="ViewBag_typeName" style="display: none;">@ViewBag.typeName</label>
    <label id="ViewBag_description" style="display: none;">@ViewBag.description</label>
    <label id="ViewBag_salePrice" style="display: none;">@ViewBag.salePrice</label>
    <label id="ViewBag_offerPrice" style="display: none;">@ViewBag.offerPrice</label>

    <!--------------------------------------
    JAVASCRIPTS
    --------------------------------------->

    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/popper.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb2/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/share.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/functions.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-table-master/dist/bootstrap-table.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-table-master/dist/extensions/print/bootstrap-table-print.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-table-master/dist/bootstrap-table-locale-all.js")" type="text/javascript"></script>

    <!-- Animation -->
    <script src="@Url.Content("~/Scripts/newWeb/assets/js/vendor/aos.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/newWeb2/assets/js/vendor.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/newWeb2/assets/js/app.js")" type="text/javascript"></script>
    
    <!-- 引入 Select2 JS -->
    <script src="@Url.Content("~/Scripts/select2.js?v=1.1.1")" type="text/javascript"></script>

    <noscript>
        <style>
            *[data-aos] {
                display: block !important;
                opacity: 1 !important;
                visibility: visible !important;
            }
        </style>
    </noscript>
    <script>
        AOS.init({
            duration: 700
        });
    </script>

    <!-- Disable animation on less than 1200px, change value if you like -->
    <script>
        AOS.init({
            disable: function () {
                var maxWidth = 200;
                return window.innerWidth < maxWidth;
            }
        });
    </script>


    <script>

        var selectProductType_Data = null;

        $(document).ready(function () {

            initializeSelectType();

            $('#selectType').val(null).trigger('change');

            $('#Submit_Btn').click(function () {
                //表单验证
                var form_check = false;
                var forms = document.getElementsByClassName('needs-validation');
                // 循环并禁止提交
                var validation = Array.prototype.filter.call(forms, function (form) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                        form_check = false;
                    } else {
                        form_check = true;
                    }
                    form.classList.add('was-validated');
                });

                if (!form_check) {
                    return;
                }

                var selectType = $('#selectType').val();
                var salePrice = $('#salePrice').val();
                var offerPrice = $("#offerPrice").val();

                var data = {
                    productTypeId: selectType,
                    salePrice: salePrice,
                    offerPrice: offerPrice
                };

                //用ajax提交数据到后端,方法为AddStockEntryBatchData,方法会返回字符串,如果是数字,则表示成功,否则表示失败
                $.ajax({
                    url: '/ProductPriceManage/AddProductPriceData', // 后端控制器的路径
                    type: 'POST',
                    data: {
                        dataJson: JSON.stringify(data)
                    },
                    success: function (res) {
                        // 确保数据为JSON对象
                        const data = JSON.parse(res);
                        var Status = data.Status;
                        if (Status == "失败") {
                            alert('创建产品价格失败，请稍后再试。');
                        } else {
                            //跳转首页
                            window.location.href = "/ProductPriceManage/Index";
                        }
                    },
                    error: function () {
                        alert('创建产品价格失败，请稍后再试。');
                    }
                });

            });

            // 返回上一页
            $('#Back_Btn').click(function () {
                var dateInput = $("#ViewBag_dateInput").text();
                window.location.href = "/ProductPriceManage/Index";
                //window.history.back();
            });
        });

        // 初始化 select2 的函数
        function initializeSelectType() {

            // 发起 AJAX 请求来获取数据,完成产品数据加载
            $.ajax({
                url: '/ProductPriceManage/QueryProductTypeData',
                type: 'POST',
                async: false,
                data: {},
                dataType: 'json',
                success: function (res) {
                    // 确保数据为JSON对象
                    const data = JSON.parse(res.Rows);

                    var processedData = [];

                    for (var i = 0; i < data.length; i++) {
                        var item = data[i];

                        var newItem = {
                            id: item.Id,
                            text: item.typeName
                            //text: item.colorCode + '/' + item.color + ' ' + item.specification + ' ' + item.process + ' [' + item.actualSize + '码]' + ' ' + '位置:' + item.explain + ' ' + '数量:' + item.remainingQuantity + '支'
                        };

                        processedData.push(newItem);
                    }
                    selectProductType_Data = processedData;
                    $('#selectType').empty();
                    // 数据加载完成后，初始化 select2
                    $('#selectType').select2({
                        data: selectProductType_Data, // 使用预加载的数据
                        placeholder: '请选择类型', // 提示文本
                        allowClear: true // 允许清除已选择的选项
                    });

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error('AJAX 请求失败:', textStatus, errorThrown);
                }
            });

            //$('#selectProduct').val(null).trigger('change');

        }

    </script>

</body>
</html>