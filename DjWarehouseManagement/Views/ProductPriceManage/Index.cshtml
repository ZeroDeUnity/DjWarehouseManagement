    <script>

        $(document).ready(function () {

            //var today_Input = $("#ViewBag_dateInput").text();
            
            //初始化数据
            initData();

            var table = $('#table01');
            table.on('dbl-click-cell.bs.table', function (e, field, value, row, $element) {
                //表格双击事件
                //field：单元格对应的字段名称。
                //value：单元格对应的数据值。
                //row：行对应的记录。
                //$element：td 元素。
                var Id = row.Id;

                window.location.href = "/ProductPriceManage/Price_History_Index?Id="
                    + Id;
            });

            table.on('click-row.bs.table', function (e, row, $element, field) {
                //表格单击事件
                //row：单击的行对应的记录。
                //$element：tr 元素。
                //field：与单击的单元格对应的字段名称。
                //if (field ==='menu_td') {
                //return; // 如果点击的是按钮，则不执行行点击逻辑
                //}
                //var Entry_Batch_Id = row.Id;
                //window.location.href = "/ProductEntry/Index_Info"; // 跳转到详情页
            });

            $('#AddPriceData_Btn').on('click', function () {
                // 跳转页面
                window.location.href = "/ProductPriceManage/Index_Add";
            });

            $('#UpdatePriceData_Btn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }
                var Id = getSelections[0].Id;
                if (Id==null) {
                    return;
                }
                
                var productTypeId = getSelections[0].productTypeId;
                var typeName = getSelections[0].typeName;
                var description = getSelections[0].description;
                var salePrice = getSelections[0].salePrice;
                var offerPrice = getSelections[0].offerPrice;
                var createTime = getSelections[0].createTime;
                window.location.href = "/ProductPriceManage/Index_Update?Id="
                    + Id + "&productTypeId=" + productTypeId + "&typeName=" + typeName + "&description" + description
                    + "&salePrice=" + salePrice + "&offerPrice=" + offerPrice + "&createTime=" + createTime;
            });

            $('#AddProductTypeData_Btn').on('click', function () {
                // 跳转页面
                window.location.href = "/ProductPriceManage/Index_Add_ProductType";
            });

            $('#UpdateProductTypeData_Btn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }

                var Id = getSelections[0].Id;
                var productTypeId = getSelections[0].productTypeId;
                var typeName = getSelections[0].typeName;
                var description = getSelections[0].description;
                var salePrice = getSelections[0].salePrice;
                var offerPrice = getSelections[0].offerPrice;
                window.location.href = "/ProductPriceManage/Index_Update_ProductType?Id="
                    + Id + "&productTypeId=" + productTypeId + "&typeName=" + typeName + "&description=" + description
                    + "&salePrice=" + salePrice + "&offerPrice=" + offerPrice;
            });

            $('#DeletePriceData_Btn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }

                var Id = getSelections[0].Id;
                var productTypeId = getSelections[0].productTypeId;

                if (Id != null) {
                    alert("已存在历史价格,无法删除!");
                    return;
                }
                
                //弹出确认框,确认则进一步删除,否则不删除
                var r = confirm("确定删除该数据吗?");
                if (r == true) {
                    // 将JSON数据传给后台处理
                    $.ajax({
                        url: '/ProductPriceManage/DeleteProductPriceData', // 修改为实际的后端处理路径
                        type: 'POST',
                        async: false,
                        data: {
                            productTypeId: productTypeId
                        },
                        success: function (response) {
                            var data = JSON.parse(response);
                            if (data.Status == "成功") {

                                //初始化数据
                                initData();
                            } else {
                                alert('产品价格数据删除失败，请稍后再试');
                            }
                        },
                        error: function () {
                            alert('请求出错，请稍后再试');
                        }
                    });

                }

            });

            $('#ViewPriceData_Btn').on('click', function () {
                var getSelections = table.bootstrapTable('getSelections');
                if (getSelections == null) {
                    return;
                }

                var productTypeId = getSelections[0].productTypeId;

                window.location.href = "/ProductPriceManage/Price_History_Index?productTypeId="
                    + productTypeId;
            });

            // 使用事件委托绑定编辑按钮点击事件
            /*            $(document).on('click', '.btn.btn-success.mr-2', function (e) {
                            if ($(this).text() === '编辑') {
                                var $tr = $(this).closest('tr');
                                var cells = $tr.find('td');

                                var cell1Value = cells.eq(2).text();
                                var cell2Value = cells.eq(3).text();
                                alert('你点击了编辑按钮，当前行第一列的值是:' + cell1Value + ', 第二列的值是:' + cell2Value);
                            } else if ($(this).text() === '查看') {
                                var $tr = $(this).closest('tr');
                                var cells = $tr.find('td');

                                var cell1Value = cells.eq(0).text();
                                var cell2Value = cells.eq(1).text();
                                alert('你点击了查看按钮，当前行第一列的值是:' + cell1Value + ', 第二列的值是:' + cell2Value);
                            }
                        });*/

            //初始化
            function initData() {
                var my_table = $('#table01');
                my_table.bootstrapTable('refreshOptions', {
                    /*ignoreClickToSelectOn: ignoreClickToSelectOn*/
                    // 其他配置
                    ajax: ajaxRequest
                });
            }

        });

        /*        function priceFormatter(value) {
                    var btnStr = '<button type="button" style="white-space: nowrap;" class="btn btn-success mr-2">编辑</button>'
                    btnStr += '<button type="button" style="white-space: nowrap;" class="btn btn-success mr-2">查看</button>';
                    return btnStr;
                }*/

        //ajax加载数据表
        function ajaxRequest(params) {
            
            // 获取选择的时间
            var selectInput = $('#selectInput').val().trim();

            var url = '/ProductPriceManage/QueryProductPriceTableData';
            $.ajax({
                url: url,
                type: 'POST',
                data: {
                    selectInput: selectInput
                },
                success: function (res) {

                    // 确保数据为JSON对象
                    const data = JSON.parse(res);

                    var rows_Data = JSON.parse(data.Rows);

                    params.success(rows_Data);
                },
                error: function (xhr, status, error) {
                    // 可以在这里添加错误处理逻辑，当前只是保持基本框架
                    console.log("请求出错，状态: " + status + ", 错误: " + error);
                }
            });
        }


    </script>



